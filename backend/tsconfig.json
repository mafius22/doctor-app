{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "types": ["node"],

    "sourceMap": true,
    "verbatimModuleSyntax": false,

    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
